programa {
  funcao inicio() {
    
    cadeia nome, sexo, estadoCivile
    inteiro tempoCasado, estadoCivil

    escreva("Digite o seu nome: ")
    leia(nome)
    limpa()

    escreva("Digite o seu sexo(M ou F): ")
    leia(sexo)
    limpa()

    se(sexo == 'F'){

    escreva("Digite seu estado civil: Casada(1) - Solteira(2) - Viúva(3): ")
    leia(estadoCivil)
    limpa()

     escolha(estadoCivil){

     caso 1:
     escreva("Digite o tempo de casada: ")
     leia(tempoCasado)
     limpa()

     escreva("Nome: ", nome)
     escreva("\nSexo: ", sexo)
     escreva("\nEstado civil: Casada")
     escreva("\nTempo de casada: ", tempoCasado, " anos")

     pare 

     caso 2: 

     escreva("Nome: ", nome)
     escreva("\nSexo: ", sexo)
     escreva("\nEstado civil: Solteira")

     pare

     caso 3:

     escreva("Nome: ", nome)
     escreva("\nSexo: ", sexo)
     escreva("\nEstado civil: Viúva")

     pare

     caso contrario: 

     escreva("Digite uma opção válida.")
     }
    }senao{

      escreva("Digite seu estado civil: Casado - Solteiro - Viúvo: ")
      leia(estadoCivile)
      limpa()

     escreva("Nome: ", nome)
     escreva("\nSexo: ", sexo)
     escreva("\nEstado civil: ", estadoCivile)


    }
  }
}
